{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      { 
        "src": "/assets/(.*)", 
        "dest": "/assets/$1" 
      },
      {
        "src": "/api/(.*)",
        "dest": "http://your-api-domain.com/api/$1"
      },
      { 
        "src": "/(.*)", 
        "dest": "/index.html" 
      }
    ]
  }
  